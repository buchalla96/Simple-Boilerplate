// -------------------------
// Variables
// -------------------------

// Properties alias
@alias {
	ff: font-family;
	fs: font-size;
	fw: font-weight;
}

// Font size
base-font-size   = 10px
medium-font-size = 8.5px
small-font-size  = 7.5px

// Media Queries
rupture.scale       = 0 600px 768px 960px 1280px
rupture.scale-names = 'small' 'medium' 'large' 'very-large'

// Colors
dark-color     =	#000
light-color    =	#fff
heading-color  =	#555
content-color  =	#777
link-color     =	#999
featured-color =	darkColor

// Layout Colors
primary-color    = #ccc
secondary-color  = #ddd
tertiary-color   = #eee
quaternary-color = lightColor

// Box Model
container-width = 1280px
base-space      = 10px
double-space    = (base-space * 2)
