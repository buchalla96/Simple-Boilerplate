// -------------------------
// Base
// -------------------------

*,
*:before,
*:after
	box-sizing border-box

html,
body
	color colorText;
	fs responsive;

h1,
h2,
h3,
h4,
h5,
h6
	color colorHeading;

a
	color colorLink;
	transition color 0.6s
	
	&:hover,
	&:active,
	&:focus
		color lighten(colorLink,5%);

strong
	color colorFeatured;
	fw bold;
